@model IEnumerable<MvcEntityFrameworkApp.Models.Employee>

@{
    ViewBag.Title = "Employee List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title - MVC App</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>Employee List</h2>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.Name</td>
                        <td>@emp.Email</td>
                        <td>@emp.Department</td>
                        <td>
                            <a href="@Url.Action("Edit", "Employee", new { id = emp.Id })" class="btn btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", "Employee", new { id = emp.Id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Employee/Create" class="btn btn-primary">Add Employee</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
